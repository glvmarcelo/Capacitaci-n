<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="modeloarg.list">
      <field name="name">vista.lista.modeloarg</field>
      <field name="model">modeloarg.modeloarg</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group col="4">
              <field name="name"/>
              <field name="value"/>
              <field name="value2"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="modeloarg.action_window">
      <field name="name">Modelo de prueba</field>
      <field name="res_model">modeloarg.modeloarg</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <field name="help" type="html"/>
        <p class="oe_view_nocontent_create" >
          Pulse para crear otro registro
        <p/>
      </field>
    </record>


    <!-- server action to the one above -->
