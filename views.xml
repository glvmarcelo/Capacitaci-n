    <!-- Top menu item -->

    <menuitem name="modeloarg" id="modeloarg.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="modeloarg.menu_1" parent="modeloarg.menu_root"/>
    <menuitem name="Menu 2" id="modeloarg.menu_2" parent="modeloarg.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="modeloarg.menu_1_list" parent="modeloarg.menu_1"
              action="modeloarg.action_window"/>
   

  </data>
</odoo>